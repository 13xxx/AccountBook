<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.airsaid.accountbook">

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 基础模块 END -->

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="LEANCLOUD_APPID"
            android:value="${leancloud_appid}"/>
        <meta-data
            android:name="LEANCLOUD_APPKEY"
            android:value="${leancloud_appkey}"/>
        <!--主页-->
        <activity android:name=".MainActivity"/>
        <!--登录-->
        <activity android:name=".login.LoginActivity"/>
        <!--注册-->
        <activity android:name=".register.RegisterActivity"/>
        <!--记账-->
        <activity android:name=".account.AccountActivity"/>
        <!--找回密码-->
        <activity android:name=".forgetpwd.ForgetPasswordActivity"/>
    </application>

</manifest>